{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "outDir": "lib",
    "removeComments": true,
    "typeRoots": ["./index.d.ts", "./node_modules/@types"],
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "./node_modules"
  ]
}